#include<iostream>
#include<iomanip>
#include<string>
using namespace std;

int main()
{
    string Refundname, Refundproduct, Refundreason, Refundconfirm, Refundother;
    int Refundphonenum, Refundreasonchoice;
    double Refundproductprice;

    cout << "Enter name :";
    getline(cin, Refundname);

    cout << "Enter phone number : ";
    cin >> Refundphonenum;

    cout << "Enter name of the product you want to refund :";
    cin.ignore();
    getline(cin, Refundproduct);

    cout << "Enter price of product :";
    cin >> Refundproductprice;
    cout << "\n";

    cout << "Please select a reason for the refund:" << endl;
    cout << "1. Product is not working." << endl;
    cout << "2. Received the wrong model or color." << endl;
    cout << "3. Physical damage found upon opening." << endl;
    cout << "4. Battery issue." << endl;
    cout << "5. Item is not compatible with my device." << endl;
    cout << "6. Other." << endl;
    cout << "Enter the number of your reason (1-6): ";
    cin >> Refundreasonchoice;

    cin.ignore();

    if (Refundreasonchoice >= 1 && Refundreasonchoice <= 5)
    {
        switch (Refundreasonchoice)
        {
        case 1:
            Refundreason = "Product is not working.";
            break;
        case 2:
            Refundreason = "Received the wrong model or color.";
            break;
        case 3:
            Refundreason = "Physical damage found upon opening.";
            break;
        case 4:
            Refundreason = "Battery issue.";
            break;
        case 5:
            Refundreason = "Item is not compatible with my device.";
            break;
        }

        cout << "You selected: " << Refundreason << endl;
        cout << "Proceeding to the next step..." << endl;

    }
    else if (Refundreasonchoice == 6)
    {
        cout << "Please describe your reason: ";
        getline(cin, Refundreason);

        cout << "You entered: " << Refundreason << endl;
        cout << "Proceeding to the next step..." << endl;
    }
    else
    {
        cout << "Invalid choice. Refund process cancel." << endl;
    }
    cout << "\n";
    cout << "Please check your information details" << endl;
    cout << "NAME         :" << Refundname << endl;
    cout << "PHONE NUMBER :" << Refundphonenum << endl;
    cout << "PRODUCT      :" << Refundproduct << endl;
    cout << "PRICE        :RM" << fixed << setprecision(2) << Refundproductprice << endl;
    cout << "REASON       :" << Refundreason << endl;
    cout << "\n"; 

    cout << "Confirm submit request? (Y/N): ";
    cin >> Refundconfirm;

    if (Refundconfirm == "Y" || Refundconfirm == "y")
    {
        cout << "\nSubmit successful." << endl;
        cout << "Would you like to refund another product? (Y/N): ";
        cin >> Refundother;

        if (Refundother == "Y" || Refundother == "y")
        {
            string RefundNEWproduct, RefundNEWreason;
            double RefundNEWproductprice;

            cout << "\nEnter name of the product you want to refund: ";
            cin.ignore();
            getline(cin, RefundNEWproduct);

            cout << "Enter price of product: ";
            cin >> RefundNEWproductprice;
            cout << "\n";

            cout << "Please select a reason for the refund:" << endl;
            cout << "1. Product is not working" << endl;
            cout << "2. Received the wrong model or color" << endl;
            cout << "3. Physical damage found upon opening" << endl;
            cout << "4. Battery issue" << endl;
            cout << "5. Item is not compatible with my device" << endl;
            cout << "6. Other" << endl;
            cout << "Enter the number of your reason (1-6): ";
            cin >> Refundreasonchoice;

            cin.ignore();

            if (Refundreasonchoice >= 1 && Refundreasonchoice <= 5)
            {
                switch (Refundreasonchoice)
                {
                case 1:
                    RefundNEWreason = "Product is not working.";
                    break;
                case 2:
                    RefundNEWreason = "Received the wrong model or color.";
                    break;
                case 3:
                    RefundNEWreason = "Physical damage found upon opening.";
                    break;
                case 4:
                    RefundNEWreason = "Battery issue.";
                    break;
                case 5:
                    RefundNEWreason = "Item is not compatible with my device.";
                    break;
                }
            }
            else if (Refundreasonchoice == 6)
            {
                cout << "Please describe your reason: ";
                getline(cin, RefundNEWreason);
            }
            else
            {
                cout << "Invalid choice. Refund process cancel." << endl;
                cout << "Back to front page." << endl;
                return 0;
            }

            cout << "\nPlease check your information details for the new product" << endl;
            cout << "NAME         : " << Refundname << endl;
            cout << "PHONE NUMBER : " << Refundphonenum << endl;
            cout << "PRODUCT      : " << RefundNEWproduct << endl;
            cout << "PRICE        :RM " << fixed << setprecision(2) << RefundNEWproductprice << endl;
            cout << "REASON       : " << RefundNEWreason << endl;

            cout << "\nConfirm submit new refund request? (Y/N): ";
            cin >> Refundconfirm;

            if (Refundconfirm == "Y" || Refundconfirm == "y")
            {
                cout << "Submit successful." << endl;
                cout << "Thank you! Have a nice day !!!" << endl;
            }
            else if (Refundconfirm == "N" || Refundconfirm == "n")
            {
                cout << "Refund request cancel." << endl;
                cout << "Back to front page." << endl;
            }
            else {
                cout << "Invalid input. Refund request cancel." << endl;
            }
        }
        else if (Refundother == "N" || Refundother == "n")
        {
            cout << "Thank you! Have a nice day!!!" << endl;
        }
        else {
            cout << "Invalid input. Refund request cancel." << endl;
        }
    }
    else if (Refundconfirm == "N" || Refundconfirm == "n")
    {
        cout << "Refund request cancel." << endl;
        cout << "Back to front page." << endl;
    }
    else {
        cout << "Invalid input. Refund request cancel." << endl;
        cout << "Back to front page." << endl;
    }

    return 0;
}
